<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="google-adsense-account" content="ca-pub-3806340503458182">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense and Income Data</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="container">
    <h1>NASAR ALOTIABI PVT LTD</h1><hr>
    <div class="routeContainer">
      <a href="/analytics">ANALYTICS</a>
      <a href="/addDataForm">ADD NEW DATA</a>
    </div>
    <h4 class="text">Expense Data</h4>
    <table border="1" class="responsive-table">
        <thead>
            <tr>
                <th>SNO</th>
                <th>DATE</th>
                <th>PARTICULAR</th>
                <th>AMT</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% expenseData.forEach(expense => { %>
                <tr>
                    <td><%= expense.sno %></td>
                    <td><%= expense.date.toDateString() %></td>
                    <td><%= expense.particular %></td>
                    <td><%= expense.amt %></td>
                    <td>
                        <form action="/removeExpense" method="post">
                            <input type="hidden" name="sno" value="<%= expense.sno %>">
                            <button type="submit" class="removeButton"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h4 class="textb">Income Data</h4>
    <table border="1" class="responsive-table">
        <thead>
            <tr>
                <th>SNO</th>
                <th>DATE</th>
                <th>PARTICULAR</th>
                <th>AMT</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% incomeData.forEach(income => { %>
                <tr>
                    <td><%= income.sno %></td>
                    <td><%= income.date.toDateString() %></td>
                    <td><%= income.particular %></td>
                    <td><%= income.amt %></td>
                    <td>
                      <form action="/removeIncome" method="post">
                          <input type="hidden" name="sno" value="<%= income.sno %>">
                          <button type="submit" class="removeButton">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                      </form>
                  </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
  </div>
</body>
</html>
