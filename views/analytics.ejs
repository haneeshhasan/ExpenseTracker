<!-- views/analytics.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense and Income Analytics</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="container">
        <a href="/" class="formBtn"><i class="fas fa-arrow-left"></i></a>
        <h1>Expense and Income Analytics</h1>

        <div class="card-container">
            <div class="card">
                <h2>Total Expense</h2>
                <p><%= sumOfExpense %></p>
            </div>

            <div class="card">
                <h2>Total Income</h2>
                <p><%= sumOfIncome %></p>
            </div>

            <div class="card">
                <h2>Total Profit</h2>
                <p><%= totalProfit %></p>
            </div>

            <div class="card">
                <h2>Total Loss</h2>
                <p><%= totalLoss %></p>
            </div>
        </div>
        <hr class="hr">
        <div>
            <h2>Analytics Chart</h2>
            <canvas id="analyticsChart" width="100%" height="40"></canvas>
        </div>
        <a href="/downloadPDF" class="downloadBtn">Download PDF</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('analyticsChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Total Expense', 'Total Income', 'Total Profit', 'Total Loss'],
                    datasets: [{
                        label: 'TOTAL',
                        data: [<%= sumOfExpense %>, <%= sumOfIncome %>, <%= totalProfit %>, <%= totalLoss %>],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                        ],
                        borderWidth: 1,
                    }],
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                        },
                    },
                },
            });
        });
    </script>
</body>

</html>
